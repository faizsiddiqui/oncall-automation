{
  "manifest_version": 2,
  "name": "OnCall Automation",
  "version": "1.0",
  "description": "Created by Faiz",
  "permissions": [
    "storage", "activeTab"
  ],
  "content_scripts": [{
    "matches": ["https://portal.victorops.com/client/*"],
    "run_at": "document_end",
    "js": ["/external/js/jquery.min.js", "/external/js/playSound.js", "common.js", "content_script.js"]
  }],
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": ["common.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "/external/icons/default_icon.png"
  },
  "icons": {
    "48": "/external/icons/icon_48.png",
    "128": "/external/icons/icon_128.png"
  },
  "web_accessible_resources": [
    "/external/knock-knock.mp3"
  ]
}
